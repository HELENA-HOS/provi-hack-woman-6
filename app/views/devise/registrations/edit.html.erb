<h2>Editar <%= current_user.name %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true,
                label: "Nome da empresa" %>
    <%= f.input :website,
                required: true %>
    <%= f.input :description,
                required: true,
                label: "Descrição da empresa" %>
    <%= f.input :email, 
                required: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Aguardando confirmação do email: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Deixe em branco se não quiser alterar sua senha",
                required: false,
                input_html: { autocomplete: "new-password" },
                label: "Senha" %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" },
                label: "Confirme sua senha" %>
    <%= f.input :current_password,
                hint: "Precisamos da sua senha atual para confirmar as alterações",
                required: true,
                input_html: { autocomplete: "current-password" },
                label: "Senha atual" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar alterações" %>
  </div>
<% end %>

